<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme using Material 3 -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Core theming -->
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>

        <!-- Material You semantic colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <!-- Custom component styles (apply explicitly via XML, not via theme) -->

    <style name="MaterialListViewStyle" parent="android:Widget.ListView">
        <item name="android:divider">@color/colorSecondary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Updated to Material3-compatible parent -->
    <style name="MaterialEditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/ic_search_background</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
