<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Product Image Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            android:contentDescription="@string/desc_product_image">

            <ImageView
                android:id="@+id/iv_detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/desc_product_image" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Product Info -->
        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_detail_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18sp"
            android:textColor="?attr/colorSecondary"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="22sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingBottom="8dp" />

        <!-- Price History Header -->
        <TextView
            android:id="@+id/tv_price_history_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_price_history"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <!-- Price History RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_price_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:contentDescription="@string/desc_price_history_list"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true" />
    </LinearLayout>
</ScrollView>
