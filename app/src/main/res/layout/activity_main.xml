<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E8F5E9">

    <!-- Toolbar with Refresh Icon -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/app_name"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_refresh" />

    <!-- Last Updated Text -->
    <TextView
        android:id="@+id/tv_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last updated"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:textColor="#555" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status message"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:textColor="#b00" />

    <!-- Search EditText -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search commodities"
        android:inputType="text"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_commodities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Empty View Text -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No commodities found"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

</LinearLayout>
